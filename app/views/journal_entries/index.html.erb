<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Journal Entries</h1>
    <%= link_to "New Entry", new_journal_entry_path, class: "btn btn-primary" %>
  </div>

  <% if @journal_entries.any? %>
    <div class="row">
      <% @journal_entries.each do |entry| %>
        <div class="col-12 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to entry.title.presence || "Untitled Entry", entry, class: "text-decoration-none" %>
              </h5>
              <p class="text-muted small">
                <%= link_to entry.entry_date.strftime("%B %d, %Y"), entry, class: "text-decoration-none text-muted" %>
              </p>
              <p class="card-text"><%= truncate(entry.content, length: 200) %></p>
              <div class="d-flex gap-2">
                <%= link_to "View", entry, class: "btn btn-outline-primary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <p class="text-muted">No entries yet. Start journaling today!</p>
      <%= link_to "Create Your First Entry", new_journal_entry_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
